<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Configuración de conexión PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/gestion_mascotas</property>
        <property name="hibernate.connection.username">postgres</property>
        <!-- ⚠️ IMPORTANTEEEEE CAMBIA ESTA CONTRASEÑA POR LA QUE PUSISTE EN LA INSTALACIÓN -->
        <property name="hibernate.connection.password">admin123</property>

        <!-- Dialecto PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Pool de conexiones -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- Auto-creación del esquema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mostrar SQL en consola -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Mapeo de entidades -->
        <mapping class="com.gestion.mascotas.modelo.entidades.Usuario"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.Mascota"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.Vacuna"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.VisitaVeterinaria"/>
        <!-- NUEVAS ENTIDADES -->
        <mapping class="com.gestion.mascotas.modelo.entidades.Recordatorio"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.RecordatorioAlimentacion"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.RecordatorioPaseo"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.Sugerencia"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.SugerenciaAlimentacion"/>
        <mapping class="com.gestion.mascotas.modelo.entidades.SugerenciaEjercicio"/>
    </session-factory>
</hibernate-configuration>