<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Configuración de la conexión a la base de datos -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/gestion_mascotas</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">mateo</property>

        <!-- Dialecto de PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Mostrar SQL en consola (útil para desarrollo) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="use_sql_comments">true</property>

        <!-- Actualizar el esquema automáticamente -->
        <!-- update: actualiza sin borrar datos | create: crea desde cero cada vez -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Configuración de encoding UTF-8 -->
        <property name="hibernate.connection.characterEncoding">utf8mb4</property>
        <property name="hibernate.connection.useUnicode">true</property>

        <!-- Pool de conexiones C3P0 -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Configuración de contexto de sesión -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Mapeo de clases de entidad -->
        <mapping class="com.gestion_mascotas.app.model.Usuario"/>
        <mapping class="com.gestion_mascotas.app.model.Mascota"/>
        <mapping class="com.gestion_mascotas.app.model.VisitaVeterinaria"/>
        <mapping class="com.gestion_mascotas.app.model.Vacuna"/>
        <mapping class="com.gestion_mascotas.app.model.TipoMascota"/>
    </session-factory>
</hibernate-configuration>