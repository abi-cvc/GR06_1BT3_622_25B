<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="GestionMascotasPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>com.gestion.mascotas.modelo.entidades.Usuario</class>
        <class>com.gestion.mascotas.modelo.entidades.Mascota</class>
        <class>com.gestion.mascotas.modelo.entidades.Vacuna</class>
        <class>com.gestion.mascotas.modelo.entidades.VisitaVeterinaria</class>
        <!-- NUEVAS ENTIDADES -->
        <class>com.gestion.mascotas.modelo.entidades.Recordatorio</class>
        <class>com.gestion.mascotas.modelo.entidades.RecordatorioAlimentacion</class>
        <class>com.gestion.mascotas.modelo.entidades.RecordatorioPaseo</class>
        <class>com.gestion.mascotas.modelo.entidades.Sugerencia</class>
        <class>com.gestion.mascotas.modelo.entidades.SugerenciaAlimentacion</class>
        <class>com.gestion.mascotas.modelo.entidades.SugerenciaEjercicio</class>

        <properties>
            <!-- Configuración de conexión PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestion_mascotas?useUnicode=true&amp;characterEncoding=UTF-8"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <!-- ⚠️ IMPORTANTEEEEEE CAMBIA ESTA CONTRASEÑA POR LA QUE PUSISTE EN LA INSTALACIÓN -->
            <property name="jakarta.persistence.jdbc.password" value="admin123"/>

            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Configuración UTF-8 para caracteres especiales (tildes, ñ) -->
            <property name="hibernate.connection.characterEncoding" value="UTF-8"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
        </properties>
    </persistence-unit>
</persistence>